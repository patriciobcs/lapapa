<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/start_conf"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/start_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajusta el tamaño de la letra al que mejor te acomode."
        android:gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="30sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/start_show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="El texto se verá así: Predeterminado de Android"
        android:gravity="center"
        android:layout_marginHorizontal="20dp" />
    <SeekBar
        android:id="@+id/start_seekbar"
        android:key="text_size"
        android:progress="0"
        android:max="4"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/start_btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar" />
</LinearLayout>